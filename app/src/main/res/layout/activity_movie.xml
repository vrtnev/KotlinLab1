<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".MovieActivity">
    <ImageView
            android:layout_width="0dp"
            android:layout_height="389dp" tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/movieImage" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="Название фильма"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/movieName" android:textSize="24sp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/movieImage" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"/>
    <TextView
            android:text="Страна"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/movieCountry" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/movieName" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"/>
    <TextView
            android:text="Рейтинг"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/movieRating" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/movieName"/>
    <TextView
            android:text="Жанр"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/movieGenre" app:layout_constraintStart_toEndOf="@+id/movieCountry"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/movieRating" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/movieName"/>
</android.support.constraint.ConstraintLayout>