<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".MovieActivity">
    <ImageView
            android:layout_width="0dp"
            android:layout_height="389dp" tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/movieImage" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="Название фильма"
            android:layout_width="233dp"
            android:layout_height="33dp"
            android:id="@+id/movieName" android:textSize="24sp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/movieImage"
    />
    <TextView
            android:text="Страна"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/movieCountry"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/movieGenre"/>
    <TextView
            android:text="Рейтинг"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/movieRating" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/movieName"/>
    <TextView
            android:text="Жанр"
            android:layout_width="77dp"
            android:layout_height="20dp"
            android:id="@+id/movieGenre"
            app:layout_constraintEnd_toStartOf="@+id/movieRating" android:layout_marginEnd="256dp"
            android:layout_marginRight="256dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.163" app:layout_constraintTop_toBottomOf="@+id/movieName"
            android:layout_marginTop="8dp"/>
    <Button
            android:text="В избранное"
            android:layout_width="150dp"
            android:layout_height="37dp"
            android:id="@+id/button2" app:layout_constraintStart_toEndOf="@+id/movieName"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintTop_toBottomOf="@+id/movieImage"
            app:layout_constraintBottom_toTopOf="@+id/movieRating" app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="0.727"/>
</android.support.constraint.ConstraintLayout>